<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bw.co.bitri.mycardapplication" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/game_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Splash" android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".Menu"/>
        <activity android:name=".Help"/>
        <activity android:name=".MultiPlayer"/>
        <activity android:name="MoneyGame"/>
        <activity android:name=".Settings"/>
        <activity android:name=".CardGrid"/>

    </application>
</manifest>